{
    "main":"public/javascripts/dakwak.js",
    "name":"Dakwak",
    "description": "Translate your website in no time and reach new markets.",
    "version": "0.0.1b",
    "category": "search engine optimization",
    "account": {
        "callback_url": "http://dakwak.com/api",
        "user_fields": ["email"]
    },
    "config":{
        "details":{
            "Category": "Localization and Search Engine Optimization",
            "Language": "English",
            "Price": "Free to install.",
            "Restrictions": "None",
            "TOS": "<a href='https://dakwak.com/tos' target='_blank'>Terms of use</a>"
        },
        "assets":{
            "logos" : {
                "200px": "./public/images/logo-200.png",
                "132px": "./public/images/logo-132.png"
            },
            "detail_page" : [
                "./public/images/example.png"
            ]
        },
        "interface": [
            {
            	"id": "mail",
                "type": "string",
                "name": "E-mail",
                "description": "Please submit your email",
                "domain_request": true
            },
            {
                "id": "origial_language",            	
                "type": "select",
                "name": "Website language",
                "description": "Your current website language",
                "options": [],
                "domain_request": true
            },            
            {
                "id": "target_language",            	
                "type": "select",
                "name": "Target language",
                "description": "The language you want to translate your website to",
                "options": [],
                "domain_request": true
            }
        ]
    }
}
